 <form class='form new-blog-form'>
  <input class='form-input ' type='text' id='blog-title' name='blog-title' placeholder="Blog Title"/>
  <textarea class='form-input form-control-lg' id='blog-body' name='blog-body' placeholder="Blog Body"></textarea>
  <button type='submit' class='btn btn-primary'>Create</button
</form>
 
  <div class='blog-list'>
    <h3>Current blogs</h3>
  {{#each blogs as |blog|}}
    <div class='row mb-2'>
      <div class='col-md-8'>
        <h4><a href='/blogs/{{blog.id}}'>{{blog.title}}</a></h4>
      </div>
      <div class='col-md-4'>
        <button class='btn btn-sm btn-danger' data-id='{{blog.id}}'>DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
